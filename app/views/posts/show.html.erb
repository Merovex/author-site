<article class="<%=t('css_article')%>">
<%= render 'components/actions', obj: @post %>
<aside class="text-center text-gray-500 opacity-75"><%= @post.published_at.strftime('%d %B %Y') %></aside>
<div class="text-center"><%= headline(@post.title) %></div>

<section class="mb-12 font-serif prose max-w-prose lg:prose-xl dark:prose-dark">
<%= @post.content %>
</section>

<%= render 'components/subscribe' %>
</article>
